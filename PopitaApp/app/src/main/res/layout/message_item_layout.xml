<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBackground"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:orientation="vertical"
                app:cardCornerRadius="1000dp"
                app:cardBackgroundColor="@color/yellow"
                >

                <TextView
                    android:id="@+id/txtFirstLetter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/montserrat_medium"
                    android:text="d"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textAllCaps="true"
                    />

                <FrameLayout
                    android:background="@drawable/message_sender_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="You always worklorem ipsumdaiso mdioas miodj saoijdo iasjdi ojasio jdiaos jdio ajsid jaosijdoia sjiodj aosijdoiajs oidjaos dsaoidjasi jdas ing. Itâ€™s 4 in the morning."
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/message_background_receiver"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>