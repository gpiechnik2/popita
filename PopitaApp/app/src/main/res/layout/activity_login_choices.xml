<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_choices"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="32dp"
    android:background="@color/yellow"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_login_choice_02" />

    <Button
        android:id="@+id/back_btn_back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="45dp"

        android:background="@drawable/button_background_back_second"
        android:fontFamily="@font/montserrat_extrabold"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:clickable="false"
        />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"

        android:drawableStart="@drawable/ic_x_icon_03"
        android:drawableLeft="@drawable/ic_x_icon_03"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16.5dp"

        android:background="@drawable/button_background_back"
        android:fontFamily="@font/montserrat_extrabold"
        android:textColor="@color/white"
        android:textSize="46dp"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="50"
        android:background="@drawable/card_login_choices"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_weight="10"
            android:layout_marginBottom="5dp"

            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="36dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="10"

            android:fontFamily="@font/montserrat_medium"
            android:text="You donâ€™t think you should login first and behave like human not robot."
            android:textColor="@color/black"
            android:textSize="17dp"
            android:gravity="center" />

        <Button
            android:id="@+id/email_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="10"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:drawableStart="@drawable/ic_mail_icon_03"
            android:drawableLeft="@drawable/ic_mail_icon_03"
            android:layout_gravity="center"
            android:paddingStart="60dp"
            android:paddingEnd="100dp"
            android:paddingRight="100dp"
            android:paddingLeft="60dp"

            android:background="@drawable/button_background"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:clickable="true"
            />

        <Button
            android:id="@+id/facebook_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="10"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"

            android:drawableStart="@drawable/ic_fb_icon_03"
            android:drawableLeft="@drawable/ic_fb_icon_03"
            android:layout_gravity="center"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"

            android:background="@drawable/button_background_facebook"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:clickable="true"
            />

        <Button
            android:id="@+id/google_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="10"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"

            android:drawableStart="@drawable/ic_mail_icon_03"
            android:drawableLeft="@drawable/ic_mail_icon_03"
            android:layout_gravity="center"
            android:paddingStart="60dp"
            android:paddingEnd="100dp"
            android:paddingRight="60dp"
            android:paddingLeft="100dp"

            android:background="@drawable/button_background_google"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:clickable="true"
            />

    </LinearLayout>



</RelativeLayout>