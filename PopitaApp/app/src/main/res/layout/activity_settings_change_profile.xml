<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsChangeProfileActivity"
    android:fillViewport="true"
    android:background="@color/blue"
    android:id="@+id/root">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/back_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="38dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="36dp"

                android:drawableStart="@drawable/ic_back_02_icon"
                android:drawableLeft="@drawable/ic_back_02_icon"
                android:gravity="left|top"
                android:layout_gravity="left|top"
                android:padding="12dp"

                android:background="@drawable/button_background_back"
                android:fontFamily="@font/montserrat_extrabold"
                android:textColor="@color/white"
                android:textSize="46dp"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/privacyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"

                android:gravity="center_horizontal"
                android:layout_weight="1"

                android:fontFamily="@font/montserrat_extrabold"
                android:text="Privacy"
                android:textColor="@color/black"
                android:textSize="27dp"
                />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="36dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/genderImage"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_gender_female" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_login_with_email"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"

                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="Your profile"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:gravity="left" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_login_with_email_second"
                android:orientation="vertical"
                android:weightSum="8"

                >

                <EditText
                    android:id="@+id/firstNameText"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"

                    android:drawableStart="@drawable/ic_login_icon_03"
                    android:drawableLeft="@drawable/ic_login_icon_03"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left|center"

                    android:text="Jenny"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="21dp" />

                <Spinner
                    android:id="@+id/genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"

                    android:drawableStart="@drawable/ic_password_icon_03"
                    android:drawableLeft="@drawable/ic_password_icon_03"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left|center"

                    android:hint="Spinner"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="21dp" />

                <Spinner
                    android:id="@+id/backgroundSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"

                    android:drawableStart="@drawable/ic_password_icon_03"
                    android:drawableLeft="@drawable/ic_password_icon_03"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left|center"

                    android:hint="Spinner"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="21dp" />

                <EditText
                    android:id="@+id/jobText"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"

                    android:drawableStart="@drawable/ic_password_icon_03"
                    android:drawableLeft="@drawable/ic_password_icon_03"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left|center"

                    android:hint="Graphic designer"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="21dp" />

                <EditText
                    android:id="@+id/preferred_drinkText"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_background"

                    android:drawableStart="@drawable/ic_alcohol"
                    android:drawableLeft="@drawable/ic_alcohol"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="left|center"

                    android:hint="Amarenka"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="21dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_email_icon_03"
                        android:scaleType="fitStart"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        />

                    <EditText
                        android:id="@+id/descriptionText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:fontFamily="@font/montserrat_medium"
                        android:inputType="textMultiLine"
                        android:paddingLeft="14dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@android:color/transparent"
                        android:textSize="21dp" />

                </LinearLayout>


                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/button_background"

                    android:clickable="true"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:gravity="center"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="21dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</ScrollView>