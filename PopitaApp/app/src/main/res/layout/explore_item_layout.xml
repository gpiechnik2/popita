<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/cardImage"
                android:background="@drawable/explore_map_background"
                />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:rotationY="-20dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/explore_distance_background"
                android:gravity="center"
                >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:fontFamily="@font/montserrat_extrabold"
                    android:text="3,5"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:maxLength="3"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:fontFamily="@font/montserrat_medium"
                    android:text="Km"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:maxLength="3"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/montserrat_extrabold"
                            android:text="Charli"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:maxLines="1"
                            android:maxLength="20" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Please have a look."
                        android:textColor="@color/black"
                        android:textSize="21dp"
                        android:maxLines="1"
                        android:paddingTop="2dp"
                        />

                </LinearLayout>

                <Button
                    android:layout_width="78dp"
                    android:layout_height="78dp"

                    android:drawableStart="@drawable/ic_explore_icon"
                    android:drawableLeft="@drawable/ic_explore_icon"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="21dp"

                    android:background="@drawable/button_background_back"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:textColor="@color/white"
                    android:textSize="46dp"
                    android:clickable="true"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>